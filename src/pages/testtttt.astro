---
import Welcome from '../components/Welcome.astro';
import HeroSection from '../components/HeroSection.astro';
import Contdown from '../components/Contdown.astro'
import Layout from '../layouts/Layout.astro';
import FeatureList from '../components/FeatureList.astro';
import Benefit from '../components/Benefit.astro';
import Plans from '../components/Plans.astro';
import Calcu from '../components/calcu.astro';
import Popup from '../components/Popup.astro';
